{
  "name": "web4-bank",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w @bank/api",
    "build:api": "npm run build -w @bank/api",
    "start:api": "npm run start -w @bank/api",
    "dev:web": "npm run dev -w @bank/web",
    "build:web": "npm run build -w @bank/web",
    "start:web": "npm run start -w @bank/web",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "prisma:generate": "npm run prisma:generate -w @bank/api",
    "prisma:migrate": "npm run prisma:migrate -w @bank/api"
  }
}

